{
    "name": "bsv/php-project-lvl2",
    "description": "Generate diff of config files",
    "type": "project",
    "keywords": [
        "diff",
        "tool",
        "hexlet"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "bsv",
            "email": "bsv.phone@ya.ru"
        }
    ],
    "require": {
        "php": "7.3.*",
        "docopt/docopt": "^1.0",
        "symfony/yaml": "^5.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "files": [
            "src/cliHandler.php",
            "src/actions.php",
            "src/parsers.php",
            "src/diffTree.php",
            "src/renderer.php",
            "src/renderers/pretty.php",
            "src/renderers/plain.php",
            "src/renderers/json.php"
        ]
    },
    "bin": [
        "bin/gendiff"
    ],
    "scripts": {
        "phpcs": "vendor/bin/phpcs",
        "test": "vendor/bin/phpunit"
    }
}
